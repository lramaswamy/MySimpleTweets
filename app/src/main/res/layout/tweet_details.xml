<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="2dp"
    android:layout_height="match_parent">

    <TextView
        tools:text="2 mins ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvRelativeTime" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:id="@+id/ivProfileImage" />

    <TextView
        tools:text="Billy Bob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_marginLeft="3dp"
        android:id="@+id/tvUserName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/space"
        android:layout_below="@+id/ivProfileImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.codepath.apps.mysimpletweeets.Adapters.LinkifiedTextView
        tools:text="Tweet Body"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoLink="all"
        android:layout_marginTop="24dp"
        android:padding="3dp"
        android:id="@+id/tvTweetBody" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_launcher"
        android:id="@+id/imageRetweet"
        android:layout_below="@+id/tvTweetBody"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="5dp"/>

    <TextView
        tools:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageRetweet"
        android:layout_toRightOf="@+id/imageRetweet"
        android:layout_toEndOf="@+id/imageRetweet"
        android:id="@+id/tvRetweets" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/star_big_on"
        android:layout_alignBottom="@+id/tvRetweets"
        android:layout_toLeftOf="@+id/tvRelativeTime"
        android:layout_toStartOf="@+id/tvRelativeTime"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:id="@+id/imFav" />

    <TextView
        tools:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imFav"
        android:layout_toRightOf="@+id/imFav"
        android:layout_toEndOf="@+id/imFav"
        android:id="@+id/tvFavorite" />

    <TextView
        android:text="Billy Bob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tvUserName"
        android:layout_alignEnd="@+id/tvUserName"
        android:id="@+id/tvScreenName" />


</RelativeLayout>